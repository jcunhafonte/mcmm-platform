<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/video_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="gone">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/bg"
        android:orientation="vertical"
        android:padding="10dp">

        <RadioGroup
            android:id="@+id/radio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/defs"
                android:textColor="@color/btn_login"
                android:textStyle="bold"
                android:paddingBottom="5dp"
                android:textSize="24sp"/>

            <RadioButton
                android:id="@+id/radio1"
                style="@style/RadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:text="176x144, 30 fps, 170 Kbps"
              android:textColor="@color/input_login" />

            <RadioButton
                android:padding="6dp"
              android:textColor="@color/input_login"
                android:id="@+id/radio2"
                style="@style/RadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="176x144, 30 fps, 200 Kbps" />

            <RadioButton
                android:padding="6dp"
              android:textColor="@color/input_login"
                android:id="@+id/radio3"
                style="@style/RadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="176x144, 30 fps, 250 Kbps" />

            <RadioButton
                android:padding="6dp"
              android:textColor="@color/input_login"
                android:id="@+id/radio6"
                style="@style/RadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="320x240, 30 fps, 250 Kbps" />

            <RadioButton
                android:padding="6dp"
              android:textColor="@color/input_login"
                android:id="@+id/radio7"
                style="@style/RadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="352x288, 30 fps, 300 Kbps" />

            <RadioButton
                android:padding="6dp"
              android:textColor="@color/input_login"
                android:id="@+id/radio8"
                style="@style/RadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="352x288, 30 fps, 400 Kbps" />

            <RadioButton
                android:padding="6dp"
                android:textColor="@color/input_login"
                android:id="@+id/radio9"
                style="@style/RadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="640x480, 30 fps, 600 Kbps" />
        </RadioGroup>
    </LinearLayout>

</FrameLayout>